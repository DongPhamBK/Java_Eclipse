
public class Break {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		for (int i = 0; i < 10; i++) {
			System.out.println(i);
			break;// ngắt ngay vòng lặp
		}

		System.out.println("******");
		
		for (int i = 0; i < 10; i++) {
			System.out.println(i);
			if (i == 4)
				break;// ngắt ngay vòng lặp
		}
		
		for(int i = 0;i<10;i++)
		{
			System.out.println("i = "+ i);
			for (int j = 0; j < 5; j++) {
				System.out.println("j = "+j);
				break;
				
			}
		}
	}
}
